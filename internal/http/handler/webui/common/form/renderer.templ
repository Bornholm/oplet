// DefaultCheckbox renders a checkbox field using Bulma CSS
templ DefaultCheckbox(fieldCtx FieldContext) {
	<div class="field" id={ "container-" + fieldCtx.Name }>
		<div class="control">
			<label class="checkbox">
				<input
					type="checkbox"
					name={ fieldCtx.Name }
					id={ fieldCtx.Name }
					if fieldCtx.Value == "on" || fieldCtx.Value == "true" || fieldCtx.Value == "1" {
						checked
					}
					{ templ.Attributes(fieldCtx.Attributes)... }
				/>
				if fieldCtx.Label != "" {
					{ " " + fieldCtx.Label }
				}
			</label>
		</div>
		if fieldCtx.Error != "" {
			<p class="help is-danger">{ fieldCtx.Error }</p>
		} else {
			<p class="help">{ fieldCtx.Placeholder }</p>
		}
	</div>
}

// DefaultFileInput renders a file input field using Bulma CSS
templ DefaultFileInput(fieldCtx FieldContext) {
	<div class="field" id={ "container-" + fieldCtx.Name }>
		if fieldCtx.Label != "" {
			<label class="label" for={ fieldCtx.Name }>
				{ fieldCtx.Label }
				if fieldCtx.Required {
					<span class="has-text-danger">*</span>
				}
			</label>
		}
		<div class="file has-name">
			<label class="file-label">
				<input
					class="file-input"
					type="file"
					name={ fieldCtx.Name }
					id={ fieldCtx.Name }
					if fieldCtx.Required {
						required
					}
					hx-on:change="
						var fileName = this.files.length > 0 ? this.files[0].name : 'No file selected';
						this.closest('.file-label').querySelector('.file-name').textContent = fileName;
					"
					{ templ.Attributes(fieldCtx.Attributes)... }
				/>
				<span class="file-cta">
					<span class="file-icon">
						<i class="fas fa-upload"></i>
					</span>
					<span class="file-label">Choose a fileâ€¦</span>
				</span>
				<span class="file-name">No file selected</span>
			</label>
		</div>
		if fieldCtx.Error != "" {
			<p class="help is-danger">{ fieldCtx.Error }</p>
		} else {
			<p class="help">{ fieldCtx.Placeholder }</p>
		}
	</div>
}

// DefaultSelect renders a select dropdown field using Bulma CSS
templ DefaultSelect(fieldCtx FieldContext, options []SelectOption) {
	<div class="field" id={ "container-" + fieldCtx.Name }>
		if fieldCtx.Label != "" {
			<label class="label" for={ fieldCtx.Name }>
				{ fieldCtx.Label }
				if fieldCtx.Required {
					<span class="has-text-danger">*</span>
				}
			</label>
		}
		<div class="control">
			<div class="select is-fullwidth">
				<select
					name={ fieldCtx.Name }
					id={ fieldCtx.Name }
					class={ templ.KV("is-danger", fieldCtx.Error != "") }
					if fieldCtx.Required {
						required
					}
					{ templ.Attributes(fieldCtx.Attributes)... }
				>
					if fieldCtx.Placeholder != "" {
						<option value="">{ fieldCtx.Placeholder }</option>
					}
					for _, option := range options {
						<option
							value={ option.Value }
							if option.Value == fieldCtx.Value {
								selected
							}
						>{ option.Label }</option>
					}
				</select>
			</div>
		</div>
		if fieldCtx.Error != "" {
			<p class="help is-danger">{ fieldCtx.Error }</p>
		} else {
			<p class="help">{ fieldCtx.Placeholder }</p>
		}
	</div>
}

// FormWrapper renders a complete form
templ FormWrapper(form *Form, action templ.SafeURL, method string) {
	<div id="form-container">
		<form
			action={ action }
			method={ method }
			if  hasFileFields(form.Fields) {
				enctype="multipart/form-data"
				hx-encoding="multipart/form-data"
			} else {
				enctype="multipart/application/x-www-form-urlencoded"
				hx-encoding="application/x-www-form-urlencoded"
			}
		>
			for _, fieldName := range form.GetFieldNames() {
				{{ fieldComponent, _ := form.RenderField(fieldName) }}
				@fieldComponent
			}
			{ children... }
		</form>
	</div>
}
